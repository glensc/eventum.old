# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
max_line_length = 120

[*.tpl.html]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,xml,json}]
indent_style = tab
indent_size = 4
